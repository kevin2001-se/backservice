package com.servicios.repository;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.servicios.model.Archivo;
import com.servicios.model.Usuario;

public interface ArchivoRespository extends JpaRepository<Archivo, Integer> {

	@Query("Select a from Archivo a where a.usuario.codigoUsu = :correo and u.contrase単a = :contrase単a")
	public Usuario BuscarUsuario(@Param("correo") String correo, @Param("contrase単a") String contrase単a);
	
}
